<%= render 'shared/errors' %>
<%= form_with(model: @article, local: true, data:{turbo: false}, class: "m-3")  do |f| %>
    <div class="form-container shadow">
        <div class="form-group">
            <%= f.label :title, class: "form-label fs-5 text-light" %>
            <%= f.text_field :title, class: "form-control mt-2 shadow rounded", placeholder: "Enter your title here" %>
        </div>
        <div class="form-group">
            <%= f.label :description, class: "form-label fs-5 text-light" %>
            <%= f.text_area :description, class: "form-control mt-2 shadow rounded", rows:"10", placeholder: "Enter your description here" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-info mt-4 text-light" %>    
    </div>
<%end%>